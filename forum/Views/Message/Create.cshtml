@model Forum.Models.Message

@{
    ViewData["Title"] = "Create";
}

<h1>Create message</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="receiverEmail" class="control-label">Receiver email</label>
                <input asp-for="receiverEmail" class="form-control" style="background-color: #a7f97d"/>
                <span asp-validation-for="receiverEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="content" class="control-label"></label>
                <textarea asp-for="content" class="form-control" style="background-color: #a7f97d; height: 150px;"></textarea>
                <span asp-validation-for="content" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 15px; display: inline-block;">
                <input type="submit" value="Create" class="button" style="border-radius:10px; background-color: #217d18" />
            </div>
            <div style="display: inline-block;">
                <a asp-action="Index" asp-controller="Message" style="margin-top: 20px; background-color: #de881c; border-radius: 10px; color: black; text-decoration: none;">&nbsp Back to home &nbsp</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
