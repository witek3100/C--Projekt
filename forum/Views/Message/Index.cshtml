@model IEnumerable<Forum.Models.Message>

@{
    ViewData["Title"] = "Index";
}
<center>
<h1>Messages</h1>

    <p>
        <button style="background-color: #de881c; border-radius: 10px; margin-top: 20px;">
            <a style="color: black; text-decoration: none;" asp-action="Create">Create new message</a>
        </button>
    </p>
    <hr/>
    
    <h2>Recieved</h2>
    <ul style="list-style-type: none;">
    @foreach (var message in ViewBag.recievedMessages)
    {
        <li style="border: 1px solid black; border-radius: 10px; margin-top: 10px; background-color: #5a9c1f">
            <div style="display: inline-block; margin-left: 100px; margin-top: 10px; margin-bottom: 10px;">
                <strong>Sender: </strong>@message.senderEmail
            </div>
            <div style="display: inline-block; margin-left: 100px;">
                <strong>Content: </strong>@message.content
            </div>
            <div style="display: inline-block;">
                <button style="border-radius: 10px; background-color: #de881c; margin-left: 100px;">
                    <a asp-action="Create" style="text-decoration: none; color: black;">Respond</a>
                </button>
            </div>
        </li>
    }
    </ul>
    <h2>Sent</h2>
    <ul style="list-style-type: none;">
        @foreach (var message in ViewBag.sentMessages)
        {
            <li style="border: 1px solid black; border-radius: 10px; margin-top: 10px; background-color: #5a9c1f">
                <div style="display: inline-block; margin-left: 100px; margin-top: 10px; margin-bottom: 10px;">
                    <strong>Reciever: </strong>@message.receiverEmail
                </div>
                <div style="display: inline-block; margin-left: 100px;">
                    <strong>Content: </strong>@message.content
                </div>
            </li>
        }
    </ul>

</center>
